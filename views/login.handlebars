<div class="container">
  {{!-- hero image --}}
  <img src="/assets/images/Credits-Page.png" class="img-fluid" alt="Typing on laptop">
  {{> menu}}
<ul>
<div id="loginMessage"></div>
<fieldset class="form-wrap" id="loginForm">
  <!-- Email Form -->
  <div class="loginFormInputWrapper">
    <span id="login-Error" class = "loginFormError"></span>
    <input class="form-control" placeholder="Email" type="email" id="loginEmail" />
  </div> 

  <!-- Password Form -->  
  <div class="loginFormInputWrapper">
    <input class="form-control" placeholder="Password" type="password" id="loginPassword" />
    </div> 
    <div class="d-grid gap-2 col-6 mx-auto">
  <button class= "btn" id="login-login">Log In</button>
</div>
</fieldset>
 </div>


{{!-- link to javaScript file --}}
{{#if devPath}}
<script src="/assets/js/login.js"></script>
{{else}}
<script src="{{prodPath}}/assets/js/login.js"></script>
{{/if}}